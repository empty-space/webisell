@model FilterPageViewModel
@{
    ViewData["Title"] = "Home Page";
}
<div class="row">
    <div class="col-md-3">
        <div class="text-center"><h3>Filters</h3></div>
        

        @foreach (var filter in Model.Filters)
        {
            <div class="panel panel-primary">
                <div class="panel-heading">@filter.Name</div>
                <div class="panel-body">
                    @foreach (var item in filter.AllowedValues)
                    {
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" name="@item" />
                                @item
                            </label>
                        </div>
                    }
                </div>
            </div>
        }
        
        <div class="btn btn-lg btn-primary col-md-offset-1 col-md-10">Search</div>
    </div>
    <div class="col-md-9">
        <div class="text-center"><h3>Products</h3></div>
        <div class="panel panel-info">
            <div class="panel-heading">Search results</div>
            <div class="panel-body">
                <h2>...</h2>
            </div>
        </div>
    </div>
</div>
